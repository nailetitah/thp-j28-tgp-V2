<div class="text-center my-5">
	<h1 class="my-5">Ajoute ton potin</h1>
<div class="d-flex justify-content-center">
<%= form_tag url_for(action: 'create'), method: "post" do %>
  <% if @gossip.errors.any? %>
    <% @gossip.errors.full_messages.each do |message| %>
      <div class="alert alert-danger" role="alert"><%= message %></div>
    <% end %>
  <% end %>
<div class="form-group text-left">
	      <%= label_tag 'Titre' %>
	      <%= text_field_tag 'gossip_title', "", :class => 'form-control mb-3' %>
	      <%= label_tag 'Contenu' %>
	      <%= text_area_tag(:gossip_content, "", size: "24x3", :class => 'form-control mb-3')  %>
	      <%= submit_tag "Valider", :class => 'my-2 w-100 btn btn-primary' %>
</div>
<% end %>
</div>
</div>
